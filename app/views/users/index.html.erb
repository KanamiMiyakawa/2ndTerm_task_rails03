<main class="container-fluid">
  <div class="container">
    <div class="main_row row">
      <div class="main_wrapper">
        <div class="user_box_base">

          <h2 class="user_index_h2">ユーザー</h2>

          <% @users.each do |user| %>
            <% if user.id != current_user.id %>
              <li>
                <div class="item">
                  <%= link_to user.name, user %>
                  <%= link_to 'メッセージ', conversations_path(sender_id: current_user.id, recipient_id: user.id), method: :post %>
                </div>
              </li>
              <li><%= render 'follow_form', user: user %></li> <!-- フォロー機能が実装されて入ればこの一文も必要 -->
            <% end %>
          <% end %>

          <br>


          <table class="user_index_table">
            <% @users.each do |user| %>
              <tr class="user_index_tr">
                <td><%= user.name %></td>
                <td><%= user.email %></td>
                <td><%= render 'follow_form', user: user %></td>
              </tr>
            <% end %>
          </table>
        </div>
      </div>
    </div>
  </div>
</main>
